<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvInfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tvInforBackGround"
        android:gravity="center"
        android:text="@string/tv_information"
        android:textColor="@color/tvInfor"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInfor" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/tv_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginStart="80dp"
            android:autofillHints="name"
            android:hint="@string/et_hint"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCMND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clName" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/tv_cmnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edtName"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginStart="80dp"
            android:autofillHints="no"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvDegree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tvCollegeBackGround"
        android:gravity="center"
        android:text="@string/tv_bangcap"
        android:textColor="@color/tvInfor"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/clCMND" />

    <RadioGroup
        android:id="@+id/rgDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDegree">

        <RadioButton
            android:id="@+id/rbSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_trungcap" />

        <RadioButton
            android:id="@+id/rbCollege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_caodang" />

        <RadioButton
            android:id="@+id/rbUniversity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_daihoc" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tvCollegeBackGround"
        android:gravity="center"
        android:text="@string/tv_sothich"
        android:textColor="@color/tvInfor"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/rgDegree" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFavorite" >

        <CheckBox
            android:id="@+id/cbReadNewspaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_docbao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <CheckBox
            android:id="@+id/cbReadBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_docsach"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cbReadNewspaper" />

        <CheckBox
            android:id="@+id/cbReadCoding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_doccoding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cbReadBook" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvEnterInfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="@string/tv_nhapthongtin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clFavorite" />

    <EditText
        android:id="@+id/edtEnterInfor"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:hint="@string/et_hint"
        android:importantForAccessibility="no"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clFavorite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_guithongtin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtEnterInfor" />


</androidx.constraintlayout.widget.ConstraintLayout>