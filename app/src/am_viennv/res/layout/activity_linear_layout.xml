<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLabelNumberOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:gravity="end"
            android:text="@string/number_1"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edtNumberOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:autofillHints=""
            android:backgroundTint="@color/black"
            android:hint="@string/enter_number_1"
            android:inputType="number"
            android:minWidth="300sp"
            android:minHeight="48sp"
            android:paddingVertical="10dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLabelNumberTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:gravity="end"
            android:text="@string/number_2"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edtNumberTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:autofillHints=""
            android:backgroundTint="@color/black"
            android:hint="@string/enter_number_2"
            android:inputType="number"
            android:minWidth="300sp"
            android:minHeight="48dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/btnPlus"
            style="?android:attr/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:backgroundTint="@color/grey"
            android:minWidth="80sp"
            android:text="@string/txt_plus"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnSub"
            style="?android:attr/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:backgroundTint="@color/grey"
            android:minWidth="80sp"
            android:text="@string/txt_sub"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnMul"
            style="?android:attr/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:backgroundTint="@color/grey"
            android:minWidth="80sp"
            android:text="@string/txt_mul"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDiv"
            style="?android:attr/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:minWidth="80sp"
            android:text="@string/txt_div"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center_vertical"
        android:minHeight="48sp"
        android:orientation="horizontal"
        android:padding="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20sp"
            android:text="@string/txt_result"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20sp"
            android:hint="@string/txt_hint_result"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
