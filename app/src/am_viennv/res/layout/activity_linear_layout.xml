<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:background="@color/white"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".LinearLayout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="20sp"
        >

        <TextView
            android:id="@+id/tv_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/black"
            android:layout_marginEnd="10sp"
            android:text="@string/number_1" />

        <EditText
            android:id="@+id/edt_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="300sp"
            android:minHeight="48sp"
            android:hint="@string/enter_number_1"
            android:backgroundTint="@color/black"
            android:layout_marginEnd="20dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:autofillHints=""
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="end"
            android:textColor="@color/black"
            android:layout_marginEnd="10sp"
            android:text="@string/number_2" />

        <EditText
            android:id="@+id/edt_num2"
            android:minHeight="48dp"
            android:hint="@string/enter_number_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"
            android:layout_marginEnd="20dp"
            android:paddingVertical="10dp"
            android:minWidth="300sp"
            android:autofillHints=""
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        >

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/grey"
            android:text="@string/txt_plus"
            android:textColor="@color/black"
            android:minWidth="80sp"
            android:textSize="20sp"
            android:layout_marginEnd="10sp"
            android:layout_height="wrap_content"
            style="?android:attr/buttonStyle" />

        <Button
            android:id="@+id/btn_sub"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/grey"
            android:text="@string/txt_sub"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:minWidth="80sp"
            android:layout_marginEnd="10sp"
            style="?android:attr/buttonStyle"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_mul"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/grey"
            android:text="@string/txt_mul"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:minWidth="80sp"
            android:layout_marginEnd="10sp"
            style="?android:attr/buttonStyle"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_div"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/grey"
            android:text="@string/txt_div"
            style="?android:attr/buttonStyle"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:minWidth="80sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center_vertical"
        android:minHeight="48sp"
        android:orientation="horizontal"
        android:padding="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20sp"
            android:text="@string/txt_result"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20sp"
            android:hint="@string/txt_hint_result"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>